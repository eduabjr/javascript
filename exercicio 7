<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Unidade 1 - Exercício 7</title>
    <script>

const numero = Number(prompt("Digite um número inteiro:"));

if (numero % 7 === 0) {
    alert(`${numero} é múltiplo de 7`);
} 

else {
    alert(`${numero} não é múltiplo de 7`);
}

    </script>
</head>
